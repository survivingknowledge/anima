<h4>login form</h4>
<table class="centered novel-form">
  <%= form_tag('/login') do %>
    <tr>
      <td><%= label_tag 'Email' %></td>
      <td><%= text_field_tag 'email' %></td>
    </tr>
    <tr>
      <td><%= label_tag 'Password' %></td>
      <td><%= password_field_tag 'password' %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag 'Login', style: 'float:right;' %></td>
    </tr>
  <% end %>
</table>
